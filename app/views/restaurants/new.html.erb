<h1>Add Your Restaurant</h1>

<%= form_for(@restaurant) do |r| %>
<div class="field">
	<%= r.label :name %> <br>
	<%= r.text_field :name %>
</div>
<div class="field">
	<%= r.label :tag_list, "Cuisine-Type (separated by commas)" %> <br>
	<%= r.text_field :tag_list %>
</div>
<div class="field">
	<%= r.label :phone %> <br>
	<%= r.text_field :phone %>
</div>
<div class="field">
	<%= r.label :address %> <br>
	<%= r.text_field :address %>
</div>
<div class="field">
	<%= r.label :street %> <br>
	<%= r.text_field :street %>
</div>
<div class="field">
	<%= r.label :city %> <br>
	<%= r.text_field :city %>
</div>
<div class="field">
	<%= r.label :postal %> <br>
	<%= r.text_field :postal %>
</div>
<div class="time">
<%= r.label :opentime %>: 
		<%= r.number_field :opentime %><br>
<%= r.label :closetime %>: 
		<%= r.number_field :closetime %>
</div>
<div class="SubmitButton">
	<%= r.submit %>
</div>
<% end %>